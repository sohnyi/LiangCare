<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16"
        android:rowCount="2"
        android:columnCount="2">

        <LinearLayout
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="@dimen/dimen_8"
            android:showDividers="end"
            android:divider="@drawable/divider_05dp"
            android:dividerPadding="2dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:cropToPadding="true"
                android:src="@drawable/category_icon_document"
                android:layout_marginBottom="@dimen/dimen_8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12.0sp"
                android:text="@string/document"/>

            <TextView
                android:id="@+id/doc_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/num_0"
                android:textSize="12.0sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:orientation="vertical"
            android:layout_margin="@dimen/dimen_8"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_8"
                android:cropToPadding="true"
                android:src="@drawable/category_icon_image"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/photo"
                android:textSize="12.0sp"/>

            <TextView
                android:id="@+id/photo_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12.0sp"
                android:text="@string/num_0"/>
        </LinearLayout>

        <LinearLayout
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:orientation="vertical"
            android:layout_margin="@dimen/dimen_8"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_8"
                android:cropToPadding="true"
                android:src="@drawable/category_icon_audio"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/audio"
                android:textSize="12.0sp"/>

            <TextView
                android:id="@+id/audio_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/num_0"
                android:textSize="12.0sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:orientation="vertical"
            android:layout_margin="@dimen/dimen_8"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_8"
                android:cropToPadding="true"
                android:src="@drawable/category_icon_video"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/video"
                android:textSize="12.0sp"/>

            <TextView
                android:id="@+id/video_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/num_0"
                android:textSize="12.0sp"/>
        </LinearLayout>

    </GridLayout>



</LinearLayout>
