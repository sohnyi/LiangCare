<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_margin="@dimen/dimen_4"
              android:orientation="vertical">


    <android.support.v7.widget.CardView
            android:id="@+id/doc_cardView"
            app:cardCornerRadius="@dimen/dimen_8"
            android:elevation="@dimen/dimen_4"
            style="@style/myCardView">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_8"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_8"
                    android:padding="@dimen/dimen_4"
                    android:cropToPadding="true"
                    android:src="@drawable/ic_insert_drive_file_white_36dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimen_4"
                    android:text="@string/document"
                    android:textColor="@android:color/white"
                    android:textSize="16.0sp"
                    android:layout_gravity="center_vertical"/>

            </TextView>


        </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/image_cardView"
        app:cardCornerRadius="@dimen/dimen_8"
        android:elevation="@dimen/dimen_4"
        style="@style/myCardView">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_8"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_8"
                android:padding="@dimen/dimen_4"
                android:cropToPadding="true"
                android:src="@drawable/ic_photo_library_white_36dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_4"
                android:text="@string/photo"
                android:textColor="@android:color/white"
                android:textSize="16.0sp"
                android:layout_gravity="center_vertical"/>



        </LinearLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/audio_cardView"
        app:cardCornerRadius="@dimen/dimen_8"
        android:elevation="@dimen/dimen_4"
        style="@style/myCardView">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_8"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_8"
                android:padding="@dimen/dimen_4"
                android:cropToPadding="true"
                android:src="@drawable/ic_library_music_white_36dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_4"
                android:text="@string/audio"
                android:textColor="@android:color/white"
                android:textSize="16.0sp"
                android:layout_gravity="center_vertical"/>



        </LinearLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/video_cardView"
        app:cardCornerRadius="@dimen/dimen_8"
        android:elevation="@dimen/dimen_4"
        style="@style/myCardView">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_8"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_8"
                android:padding="@dimen/dimen_4"
                android:cropToPadding="true"
                android:src="@drawable/ic_video_library_white_36dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_4"
                android:text="@string/video"
                android:textColor="@android:color/white"
                android:textSize="16.0sp"
                android:layout_gravity="center_vertical"/>



        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>
