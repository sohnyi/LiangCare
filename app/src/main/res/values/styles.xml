<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="passwordKeypadBut">
        <item name="android:layout_width">@dimen/pass_button_size</item>
        <item name="android:layout_height">@dimen/pass_button_size</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">32sp</item>
        <item name="android:background">@drawable/btn_transback_with_white_effect</item>
        <item name="android:layout_margin">@dimen/dimen_8</item>
    </style>

    <style name="myCardView" parent="CardView.Dark">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dimen_8</item>
        <item name="android:layout_marginBottom">@dimen/dimen_8</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="myAlertDialog" parent="Base.Theme.AppCompat.Light.Dialog" >
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>


    <style name="negative">
        <item name="android:textColor">@color/secondaryText</item>
    </style>


</resources>
